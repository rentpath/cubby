{
  "name": "@cubby",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "https://github.com/rentpath/cubby",
  "author": "RentPath",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "commit": "cz",
    "commit:lint": "commitlint -f $(git log origin/main --oneline --pretty=%h | head -n 1) -t $(git rev-parse --short HEAD) --verbose",
    "lint:ts": "yarn lint:ts:ci --fix",
    "lint:ts:ci": "eslint --cache --no-error-on-unmatched-pattern packages",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@testing-library/dom": "^7.30.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@types/jest": "^26.0.22",
    "@types/react": "*",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "commitizen": "^4.2.4",
    "commitlint": "^12.0.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "preact": "*",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "*",
    "rollup": "^2.42.4",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "@rentpath/toolkit-commit"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
